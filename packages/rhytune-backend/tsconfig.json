{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*", "src/types/**/*", "index.ts", "app.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
